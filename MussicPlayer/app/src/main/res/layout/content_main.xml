<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.truong.mymedia.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#999C27B0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Line1"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/Line2"
        android:weightSum="1"
        android:background="#999C27B0">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cd640"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:id="@+id/avata"
            android:layout_weight="0.8">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timecurrent"
                android:text="Time Current"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time End"
                android:textSize="15sp"

                android:layout_gravity="end|right"
                android:id="@+id/Time_end"
                android:gravity="end|right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <SeekBar
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:nextFocusDown="@id/avata"
                android:id="@+id/Seekbar"
                android:layout_weight="0.1"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_height="10dp"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Line2"
        android:nextFocusDown="@id/Line1"
        android:gravity="bottom|center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#99BBDEFB"
        android:layout_marginBottom="0dp">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_rew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="0.2"
            android:scaleType="fitXY"
            android:elevation="1dp"


            app:srcCompat="@android:drawable/ic_media_rew"
            app:elevation="2dp" />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:background="@android:drawable/ic_media_previous"
            app:srcCompat="@android:drawable/ic_media_previous"
            android:layout_weight="0.2"
            android:scaleType="fitXY"
            android:elevation="1dp"


            />



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="0.2"
            app:srcCompat="@android:drawable/ic_media_play"
            android:scaleType="fitXY"
            android:elevation="1dp"

            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.2"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_media_next"
            android:scaleType="fitXY"
            android:elevation="1dp"


            />
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/fab_margin"
            android:layout_weight="0.2"
            android:scaleType="fitXY"
            android:elevation="1dp"
            app:srcCompat="@android:drawable/ic_media_ff" />

    </LinearLayout>


</RelativeLayout>
